# ============================================
# TRAVI Staging Environment Configuration
# ============================================

# Environment
NODE_ENV=staging
PORT=5000

# Database (Staging)
DATABASE_URL=postgresql://user:password@staging-db.travi.world:5432/travi_staging

# Session
SESSION_SECRET=staging-session-secret-change-in-production

# AI Services (Use lower limits for staging)
OPENAI_API_KEY=sk-staging-key
ANTHROPIC_API_KEY=sk-ant-staging-key

# Redis (Staging)
REDIS_URL=redis://staging-redis.travi.world:6379

# Email (Staging - use test mode)
RESEND_API_KEY=re_test_key
LEAD_NOTIFICATION_EMAIL=staging@travi.world

# Feature Flags (More conservative in staging)
ENABLE_SEO_AUTOPILOT=true
ENABLE_DATA_DECISIONS=true
ENABLE_CONTENT_HEALTH=true
ENABLE_TRANSLATION_QUEUE=true
ENABLE_TRANSLATION_WORKER=true
ENABLE_RSS_SCHEDULER=true
ENABLE_LOCALIZATION_GOVERNANCE=true

# Autopilot Modes (Supervised in staging)
SEO_AUTOPILOT_MODE=supervised
DATA_DECISIONS_AUTOPILOT_MODE=supervised

# Staging-specific
STAGING_MODE=true
LOG_LEVEL=debug
ENABLE_DEBUG_ENDPOINTS=true

# Analytics (Staging project)
POSTHOG_API_KEY=phc_staging_key

# Application URL
APP_URL=https://staging.travi.world

# Rollback Notifications
ROLLBACK_WEBHOOK_URL=https://hooks.slack.com/staging-webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/staging-alerts

# Rate Limits (Lower for staging)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50
