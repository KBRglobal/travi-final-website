modules = ["nodejs-20"]
run = "fuser -k 5000/tcp 2>/dev/null; npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["gh", "jq"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[objectStorage]
defaultBucketID = "replit-objstore-bbbec3d1-9961-48ff-80a6-2b195804ed08"

[userenv]

[userenv.shared]
DEV_AUTO_AUTH = "true"
ENABLE_SITEMAP_V2 = "true"
BASE_URL = "https://travi.world"
TIQETS_PARTNER_ID = "travi-182933"
APP_URL = "https://travi.world"
ADMIN_EMAIL = "traviquackson@gmail.com"
FROM_EMAIL = "onboarding@resend.dev"
ENABLE_AUDIT_LOGS = "true"

[userenv.production]
FRONTEND_ONLY = "false"
DISABLE_BACKGROUND_SERVICES = "true"
SKIP_DB_MIGRATIONS = "false"
RUN_PROD_SEED = "true"
SKIP_PARITY_CHECK = "true"

[userenv.development]
SKIP_PARITY_CHECK = "true"
