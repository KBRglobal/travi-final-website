# Database
DATABASE_URL=postgresql://user:password@localhost:5432/traviapp

# Server
PORT=5000
NODE_ENV=development

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=# Generate with: node -e "console.log(require('bcrypt').hashSync('your-password', 10))"

# AI Services (at least one required for content generation)
OPENAI_API_KEY=sk-...
AI_INTEGRATIONS_OPENAI_API_KEY=# Optional: If using AI integrations
AI_INTEGRATIONS_OPENAI_BASE_URL=# Optional: Custom OpenAI base URL

# Anthropic (for premium content)
ANTHROPIC_API_KEY=sk-ant-...
AI_INTEGRATIONS_ANTHROPIC_API_KEY=# Optional: If using AI integrations
AI_INTEGRATIONS_ANTHROPIC_BASE_URL=# Optional: Custom Anthropic base URL

# Google AI (Gemini)
GOOGLE_GENAI_API_KEY=# For Google Gemini models

# Groq (Fast inference)
GROQ_API_KEY=# For Groq fast inference

# DeepSeek (Fallback AI)
DEEPSEEK_API_KEY=# For DeepSeek models as fallback

# Image Generation
REPLICATE_API_KEY=# For Flux image generation
FREEPIK_API_KEY=# For stock images

# Email (Resend)
RESEND_API_KEY=re_...
LEAD_NOTIFICATION_EMAIL=admin@example.com

# Caching (Redis - Optional, falls back to in-memory)
UPSTASH_REDIS_REST_URL=https://...
UPSTASH_REDIS_REST_TOKEN=...

# Translation Services (Optional)
DEEPL_API_KEY=# For DeepL translations

# Analytics (Optional)
POSTHOG_API_KEY=phc_...
VITE_POSTHOG_KEY=phc_...# Client-side PostHog key
VITE_POSTHOG_HOST=https://us.i.posthog.com

# Google Maps (Optional - for map embed features in content editor)
VITE_GOOGLE_MAPS_API_KEY=# Get from https://console.cloud.google.com/

# Object Storage (S3-compatible)
S3_BUCKET_NAME=traviapp
S3_REGION=auto
S3_ENDPOINT=# For non-AWS S3 (e.g., Cloudflare R2)
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Application URL (for sitemap, canonical URLs)
APP_URL=https://travi.world

# Session Security
SESSION_SECRET=your-secure-session-secret-at-least-32-characters

# Rollback Notifications (Optional)
ROLLBACK_WEBHOOK_URL=# Webhook URL for rollback notifications
ROLLBACK_EMAIL_RECIPIENTS=# Comma-separated email addresses
SLACK_WEBHOOK_URL=# Slack webhook for notifications

# Feature Flags
ENABLE_SEO_AUTOPILOT=true
ENABLE_DATA_DECISIONS=true
ENABLE_CONTENT_HEALTH=true
ENABLE_TRANSLATION_QUEUE=true
ENABLE_TRANSLATION_WORKER=true
ENABLE_RSS_SCHEDULER=true
ENABLE_LOCALIZATION_GOVERNANCE=true

# Autopilot Modes (supervised or autonomous)
SEO_AUTOPILOT_MODE=supervised
DATA_DECISIONS_AUTOPILOT_MODE=supervised
